<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.ecommerce.dell.mcommerce.activity.payment.ShippingAddressActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/top"
        android:gravity="top|center"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chooseadd"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="normal|bold" />


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/container"
                android:orientation="vertical"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"

                >

      


            </LinearLayout>


        </ScrollView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:id="@+id/bottomLayout"
        android:layout_marginTop="10dp"
        >




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></LinearLayout>

        <Button
            android:id="@+id/addAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/stored_addresses_add_address"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:background="#733115"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bottomshadow"
            android:layout_marginBottom="-7dp"/>

    </LinearLayout>




</LinearLayout>
