<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.ecommerce.dell.mcommerce.activity.SelectRegionActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:src="@drawable/region"
        android:scaleType="fitXY"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_region_language"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:textColor="#e4626262" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lang_spinner"
        android:background="@drawable/edit_text1_background"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"></Spinner>


    <Button
        android:id="@+id/proceed"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/select_region_save"
        android:layout_marginTop="20dp"
        android:background="#733115"
        android:textColor="@android:color/white"
        />

</LinearLayout>
