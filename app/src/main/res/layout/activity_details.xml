<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Sun glasses"
        android:textSize="@dimen/details_title_size"
        android:padding="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/line"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:id="@+id/image"
                    android:adjustViewBounds="true"
                    android:background="@android:color/white"/>

                <ImageView
                    android:id="@+id/share"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="85dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/share"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />



                <FrameLayout
                    android:id="@+id/shareFly"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right">



                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/share_facebook"/>

                    <ImageView
                        android:id="@+id/twitter"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/share_twitter"/>

                    <ImageView
                        android:id="@+id/pinterest"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="90dp"
                        android:layout_marginTop="75dp"
                        android:src="@drawable/share_pinterest"/>


                    <ImageView
                        android:id="@+id/whatsapp"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="130dp"
                        android:src="@drawable/share_whatsapp"/>

                    <ImageView
                        android:id="@+id/gmail"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="155dp"
                        android:src="@drawable/share_email"/>

                </FrameLayout>



            </FrameLayout>


            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/line1"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:padding="10dp"
                    android:textColor="#f72a49"
                    android:text="@string/main_activity_currency"
                    android:textSize="@dimen/details_title_size" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#0f561a"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@android:color/white"
                    android:text="@string/details_buy_now"
                    android:id="@+id/buy"
                    android:textSize="@dimen/details_title_size" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/cart"
                        android:text="@string/details_cart"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:background="#ff1341"
                        android:textSize="15sp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/cart"/>
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/wishlist"
                        android:text="@string/details_wishlist"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/wishlist"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:background="#ff1341"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_description"
                android:textSize="@dimen/details_title_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#0e0e0e"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_code"
                android:textSize="@dimen/details_title_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/code"
                android:text="aaaaaaaaaaaaaaaaaaa"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#0e0e0e"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_size"
                android:textSize="@dimen/details_title_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/size"
                android:text="aaaaaaaaaaaaaaaaaaaa"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#0e0e0e"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_type"
                android:textSize="@dimen/details_title_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:text="aaaaaaaaaaaaaaaaaaaa"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#0e0e0e"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_origins"
                android:textSize="@dimen/details_title_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/origins"
                android:text="aaaaaaaaaaaaaaaaaaaa"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#0e0e0e"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_fragrance"
                android:textSize="@dimen/details_title_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragrance"
                android:text="aaaaaaaaaaaaaaaaaaaa"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#0e0e0e"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
