<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#f7f7f9">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/header">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hscroll"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/slideshowLinear"
                            >

                        </LinearLayout>



                    </HorizontalScrollView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/manualslider"
                    >



                </LinearLayout>

                <EditText
                    android:id="@+id/search"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:editable="false"
                    android:imeOptions="actionSearch"
                    android:singleLine="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/main_text"></LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/main_text"
                        android:text="@string/main_activity_popular"
                        android:textSize="16dp"/>
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/main_text"></LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:id="@+id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_activity_offers"
                                android:textColor="@color/product_name_text"
                                />
                            <Button
                                android:id="@+id/a19"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/category_offers"
                                android:layout_weight="1"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginStart="5dp"
                            android:weightSum="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_activity_execlusive"
                                android:textColor="@color/product_name_text"
                                />
                            <Button
                                android:id="@+id/a61"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/category_exclusive"
                                android:layout_weight="1"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:src="@drawable/logo_home"
                        android:layout_marginTop="-25dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <LinearLayout
                        android:layout_marginTop="-20dp"
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_marginEnd="5dp"
                            android:weightSum="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/main_activity_men"
                                android:textColor="@color/product_name_text"
                                />
                            <Button
                                android:id="@+id/a27"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/category_men"
                                android:layout_weight="1"
                                />
                        </LinearLayout>



                        <LinearLayout
                            android:weightSum="2"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_activity_women"
                                android:textColor="@color/product_name_text"
                                />
                            <Button
                                android:id="@+id/a26"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/category_women"
                                android:layout_weight="1"
                                />
                        </LinearLayout>



                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="-40dp"
                        android:weightSum="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <Button
                            android:id="@+id/a33"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/category_best_sellers"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            />

                        <TextView
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/main_activity_best_sellers"
                            android:textColor="@color/product_name_text"
                            />

                    </LinearLayout>


                </LinearLayout>




                <!--Exclusive-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/main_text"></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/newArrival"
                        android:textColor="@color/main_text"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/main_text"></LinearLayout>
                </LinearLayout>

                <!--Exclusive Scroll View-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <Button
                        android:id="@+id/left_arrow_bestSellers"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/horizontal_view_arrow_left"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <Button
                        android:id="@+id/right_arrow_bestSellers"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/horizontal_view_arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_marginRight="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_height="330dp"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    >


                    <!-- Time Layout -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"

                        >
                        <ImageView
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/about_workingtime"
                            android:layout_width="70dp"
                            android:layout_height="80dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#451213"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:text="@string/main_activity_workingtime"/>
                    </LinearLayout>


                    <!-- Shipping Layout -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/shippingimage"
                            android:layout_marginEnd="10dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:src="@drawable/about_shipping"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:textColor="#451213"
                            android:gravity="center"
                            android:text="@string/main_activity_freeshipping"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="2">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_marginEnd="10dp"
                            android:layout_height="80dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/about_guarantee"
                            android:layout_width="70dp" />

                        <TextView
                            android:adjustViewBounds="true"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#451213"
                            android:text="@string/main_activity_days"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp"
                        >
                        <ImageView
                            android:id="@+id/contactusimage"
                            android:layout_marginEnd="10dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:src="@drawable/about_contactus"
                            android:padding="5dp"
                            />

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#451213"
                            android:text="@string/main_activity_contactus"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.ecommerce.dell.mcommerce.activity.NavigationDrawerFragment"
        tools:layout="@layout/side_menu" />

</android.support.v4.widget.DrawerLayout>
