<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:bottomRightRadius="0dip" android:topRightRadius="0dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#74675e" android:endColor="#b8a293"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:bottomRightRadius="0dip" android:topRightRadius="0dip" />
            <stroke android:width="1dip" android:color="#74675e" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:bottomRightRadius="0dip" android:topRightRadius="0dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#74675e" android:endColor="#b8a293" />
        </shape>
    </item>
</selector>