            <corners android:bottomLeftRadius="0dip" android:topLeftRadius="0dip" android:bottomRightRadius="0dip" android:topRightRadius="0dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="@android:color/white"/>

